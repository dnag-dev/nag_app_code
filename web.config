<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <webSocket enabled="true" />
    <handlers>
      <add name="PythonHandler" path="*" verb="*" modules="httpPlatformHandler" resourceType="Unspecified" />
    </handlers>
    <httpPlatform processPath="python"
                  arguments="-m uvicorn main:app --host 0.0.0.0 --port 8000 --ws websockets"
                  stdoutLogEnabled="true"
                  stdoutLogFile="..\LogFiles\python.log"
                  startupTimeLimit="60"
                  processesPerApplication="1">
      <environmentVariables>
        <environmentVariable name="PYTHONUNBUFFERED" value="1" />
        <environmentVariable name="PYTHONPATH" value="." />
        <environmentVariable name="WEB_SOCKETS_ENABLED" value="1" />
      </environmentVariables>
    </httpPlatform>
  </system.webServer>
</configuration>
