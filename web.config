<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <!-- Route all requests to Python via httpPlatform -->
      <add name="PythonHandler" path="*" verb="*" modules="httpPlatformHandler" resourceType="Unspecified"/>
    </handlers>
    <httpPlatform
      processPath="/usr/local/bin/python3"
      arguments="/usr/local/bin/gunicorn --bind 0.0.0.0:%HTTP_PLATFORM_PORT% --workers 1 --timeout 600 --chdir /home/site/wwwroot --pythonpath /home/site/wwwroot main:app"
      startupTimeLimit="60"
      processesPerApplication="1"
      stdoutLogEnabled="true"
      stdoutLogFile="%HOME%\\LogFiles\\python.log">
      <environmentVariables>
        <environmentVariable name="PORT" value="%HTTP_PLATFORM_PORT%" />
        <environmentVariable name="PYTHONPATH" value="/home/site/wwwroot" />
        <environmentVariable name="PYTHONUNBUFFERED" value="1" />
        <environmentVariable name="GUNICORN_WORKER_CLASS" value="uvicorn.workers.UvicornWorker" />
        <environmentVariable name="WEBSITE_SITE_NAME" value="%WEBSITE_SITE_NAME%" />
        <environmentVariable name="WEBSITE_HOSTNAME" value="%WEBSITE_HOSTNAME%" />
      </environmentVariables>
    </httpPlatform>
  </system.webServer>
</configuration>
