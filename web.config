<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <add name="PythonHandler" path="*" verb="*" modules="httpPlatformHandler" resourceType="Unspecified"/>
    </handlers>
    <httpPlatform processPath="%home%\site\wwwroot\antenv\Scripts\python.exe"
                  arguments="-m uvicorn main:app --host 0.0.0.0 --port %HTTP_PLATFORM_PORT%"
                  stdoutLogEnabled="true"
                  stdoutLogFile="%home%\LogFiles\python.log"
                  startupTimeLimit="60">
      <environmentVariables>
        <environmentVariable name="PORT" value="%HTTP_PLATFORM_PORT%" />
        <environmentVariable name="WEBSITE_SITE_NAME" value="%WEBSITE_SITE_NAME%" />
        <environmentVariable name="WEBSITE_HOSTNAME" value="%WEBSITE_HOSTNAME%" />
        <environmentVariable name="WEBSITE_INSTANCE_ID" value="%WEBSITE_INSTANCE_ID%" />
        <environmentVariable name="WEBSITE_AUTH_ENABLED" value="%WEBSITE_AUTH_ENABLED%" />
        <environmentVariable name="WEBSITE_ROLE_INSTANCE_ID" value="%WEBSITE_ROLE_INSTANCE_ID%" />
        <environmentVariable name="PYTHONPATH" value="%home%\site\wwwroot" />
        <environmentVariable name="PYTHONUNBUFFERED" value="1" />
        <environmentVariable name="GUNICORN_WORKERS" value="2" />
        <environmentVariable name="GUNICORN_TIMEOUT" value="120" />
        <environmentVariable name="GUNICORN_MAX_REQUESTS" value="1000" />
        <environmentVariable name="GUNICORN_MAX_REQUESTS_JITTER" value="50" />
      </environmentVariables>
    </httpPlatform>
  </system.webServer>
</configuration> 